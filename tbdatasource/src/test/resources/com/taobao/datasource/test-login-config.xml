          <login-module code = "org.jboss.resource.security.SecureIdentityLoginModule"
             flag = "required">
               <module-option name = "username">taobao</module-option>
               <module-option name = "password">46bede21694492800a944ca43198bb47</module-option>
               <module-option name = "managedConnectionFactoryName">jboss.jca:service=LocalTxCM,name=DB1DataSource</module-option>
         </login-module>
      </authentication>
    </application-policy>
    <application-policy name = "EncryptDBCPassword">
       <authentication>
          <login-module code = "org.jboss.resource.security.SecureIdentityLoginModule"
             flag = "required">
               <module-option name = "userName">taobao</module-option>
               <module-option name = "password">131ed685e7ff86d4</module-option>
               <module-option name = "managedConnectionFactoryName">jboss.jca:service=LocalTxCM,name=DBCDataSource</module-option>
         </login-module>
      </authentication>
    </application-policy>
</policy>

